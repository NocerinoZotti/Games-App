<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/tb"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:id="@+id/wholescreen"
        style="@style/base.mainRelativeLayout"
        android:background="@color/darkestgray" >

    <TextView
        android:id="@+id/targetnumberlabel"
        style="@style/base.label"
        android:text="@string/targetnumberlabel"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/targetnumber"
        style="@style/base.number"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/targetnumberlabel"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentsumlabel"
        style="@style/base.label"
        android:layout_below="@id/targetnumberlabel"
        android:text="@string/currentsumlabel"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/currentnumber"
        style="@style/base.number"
        android:layout_below="@id/targetnumber"
        android:layout_marginTop="18dip"
        android:layout_toRightOf="@id/currentsumlabel"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/elapsedtimelabel"
        style="@style/base.label"
        android:layout_below="@id/currentsumlabel"
        android:text="@string/elapsedtimelabel"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/elapsedtime"
        style="@style/base.number"
        android:layout_width="50dp"
        android:layout_above="@id/movingBttn1"
        android:layout_toRightOf="@id/elapsedtimelabel"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/movingBttn1"
        style="@style/base.flock"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="25dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn2"
        style="@style/base.flock"
        android:layout_marginLeft="75dip"
        android:layout_marginTop="25dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn3"
        style="@style/base.flock"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="25dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn4"
        style="@style/base.flock"
        android:layout_marginLeft="175dip"
        android:layout_marginTop="25dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn5"
        style="@style/base.flock"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="75dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn6"
        style="@style/base.flock"
        android:layout_marginLeft="75dip"
        android:layout_marginTop="75dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn7"
        style="@style/base.flock"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="75dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn8"
        style="@style/base.flock"
        android:layout_marginLeft="175dip"
        android:layout_marginTop="75dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn9"
        style="@style/base.flock"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="125dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn10"
        style="@style/base.flock"
        android:layout_marginLeft="75dip"
        android:layout_marginTop="125dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn11"
        style="@style/base.flock"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="125dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn12"
        style="@style/base.flock"
        android:layout_marginLeft="175dip"
        android:layout_marginTop="125dip"
        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/movingBttn13"
        style="@style/base.flock"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="175dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn14"
        style="@style/base.flock"
        android:layout_marginLeft="75dip"
        android:layout_marginTop="175dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn15"
        style="@style/base.flock"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="175dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn16"
