        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/movingBttn18"
        style="@style/base.flock"
        android:layout_marginLeft="75dip"
        android:layout_marginTop="225dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn19"
        style="@style/base.flock"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="225dip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/movingBttn20"
        style="@style/base.flock"
        android:layout_marginLeft="175dip"
        android:layout_marginTop="225dip"
        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/addition"
        style="@style/base.bttn.math.addition"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/additionarrow"
        style="@style/base.arrow.addition" />

    <Button
        android:id="@+id/subtraction"
        style="@style/base.bttn.math.subtraction"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/subtractionarrow"
        style="@style/base.arrow.subtraction" />

    <Button
        android:id="@+id/multiplication"
        style="@style/base.bttn.math.multiplication"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/multiplicationarrow"
        style="@style/base.arrow.multiplication" />

    <Button
        android:id="@+id/division"
        style="@style/base.bttn.math.division"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/divisionarrow"
        style="@style/base.arrow.division" />

    <Button
        android:id="@+id/square"
        style="@style/base.bttn.math.square"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cube"
        style="@style/base.bttn.math.cube"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/squareroot"
        style="@style/base.bttn.math.squareroot"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/mathmath"
        style="@style/base.mathmath"
        android:visibility="gone" />

    <Button
        android:id="@+id/newgame"
        style="@style/base.newgame"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/quote"
        style="@style/base.alt.quote"
        android:visibility="gone" />

    <TextView
        android:id="@+id/author"
        style="@style/base.alt.author"
        android:visibility="gone" />

    <TextView
        android:id="@+id/copyright"
        style="@style/base.copyright"
        android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
