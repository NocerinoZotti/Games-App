<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/tb"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/AppBar">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingStart="50dp"
            android:text="@string/theme"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerTheme"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:entries="@array/optionsTheme"
            android:paddingStart="50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerTheme"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingStart="50dp"
            android:text="@string/language"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:entries="@array/languagesList"
            android:paddingStart="50dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerLanguage"
            android:layout_alignStart="@id/textView4"
            android:layout_alignTop="@id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/textView1"
            android:text="@string/favourite"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerGame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/spinnerTheme"
            android:entries="@array/games" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerGame"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/textView2"
            android:text="@string/usernamePreference"
            android:textSize="18sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UsernamePreference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@id/spinnerLanguage">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputUsername"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/username" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UsernamePreference"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="back"
            android:text="@string/apply" />

    </RelativeLayout>
</RelativeLayout>